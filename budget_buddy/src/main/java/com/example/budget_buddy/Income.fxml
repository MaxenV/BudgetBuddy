<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox spacing="10" xmlns:fx="http://javafx.com/fxml" fx:controller="yourpackage.IncomeController">
    <Label text="Add Income" style="-fx-font-size: 16px;" />
    <HBox spacing="5">
        <Label text="Date:" />
        <DatePicker fx:id="incomeDatePicker" />
    </HBox>
    <HBox spacing="5">
        <Label text="Category:" />
        <TextField fx:id="incomeCategoryField" />
    </HBox>
    <HBox spacing="5">
        <Label text="Amount:" />
        <TextField fx:id="incomeAmountField" />
    </HBox>
    <Button text="Add Income" onAction="#addIncome" />
</VBox>
