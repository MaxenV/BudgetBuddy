<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="yourpackage.DashboardController">
    <top>
        <HBox spacing="10" alignment="CENTER">
            <Label text="BudgetBuddy Dashboard" style="-fx-font-size: 20px; -fx-font-weight: bold;" />
        </HBox>
    </top>
    <center>
        <VBox spacing="15" alignment="CENTER">
            <Label fx:id="balanceLabel" text="Total Balance: $" style="-fx-font-size: 16px;" />
            <TableView fx:id="recentTransactionsTable">
                <columns>
                    <TableColumn fx:id="transactionDateColumn" text="Date" />
                    <TableColumn fx:id="transactionTypeColumn" text="Type" />
                    <TableColumn fx:id="transactionAmountColumn" text="Amount" />
                </columns>
            </TableView>
            <TabPane>
                <Tab text="Income">
                    <VBox fx:id="incomeTabContent" spacing="10" alignment="CENTER" />
                </Tab>
                <Tab text="Expense">
                    <VBox fx:id="expenseTabContent" spacing="10" alignment="CENTER" />
                </Tab>
            </TabPane>
        </VBox>
    </center>
</BorderPane>
