<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox spacing="10" xmlns:fx="http://javafx.com/fxml" fx:controller="yourpackage.ExpenseController">
    <Label text="Add Expense" style="-fx-font-size: 16px;" />
    <HBox spacing="5">
        <Label text="Date:" />
        <DatePicker fx:id="expenseDatePicker" />
    </HBox>
    <HBox spacing="5">
        <Label text="Category:" />
        <TextField fx:id="expenseCategoryField" />
    </HBox>
    <HBox spacing="5">
        <Label text="Amount:" />
        <TextField fx:id="expenseAmountField" />
    </HBox>
    <Button text="Add Expense" onAction="#addExpense" />
</VBox>
